<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <div class="container pt-5">
      @Html.ActionLink("HOME", "Index", "Home",null,  new { @class = "links"})
      @if(User.Identity.Name != null)
      {
        <h4>You are signed in as @User.Identity.Name</h4>
        @using (Html.BeginForm("LogOff", "Account"))
        {
          <input type="submit" id="logout" value="Log out"/>
        }
      } else {
        <h4>You are not currently signed in</h4>
        @Html.ActionLink("Create an account", "Index", "Account", null, new {@class="links"})
      }
      <hr />
      @Html.ActionLink("Log in", "Login", "Account", null, new {@class="links"})
      @Html.ActionLink("Treats", "Index", "Treats",null,  new { @class = "links"})
      @Html.ActionLink("Flavors", "Index", "Flavors",null,  new { @class = "links"})
    </div>
    <br>
    @RenderBody()
  </body>
</html>