@{
  Layout = "_Layout";
}

<h1>Account Creation</h1>
<hr />
@if (User.Identity.IsAuthenticated)
{
  <p>Welcome back @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="links" value="Log out" />
  }
}
else
{
  <h2>Please Register for an Account.</h2>
  <p>@Html.ActionLink("Register", "Register", null, null, new {@class="links"})</p>
  <p>@Html.ActionLink("Log in", "Login", null, null, new {@class="links"})</p>
}